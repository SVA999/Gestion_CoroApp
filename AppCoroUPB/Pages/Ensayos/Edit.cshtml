@page
@model AppCoroUPB.Pages.Ensayos.EditModel
@{
}

<h2 class="text-center mb-3">Editar Ensayo</h2>

@if (Model.updateSuccess.Length > 0)
{
<div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>@Model.updateSuccess</strong>
<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
}

<form method="post">
    <div class="row g-2 mb-3">
        <div class="col-lg-6">

            <div class="card h-100">
                <div class="card-header">
                    Detalles del Ensayo
                </div>
                <div class="card-body">

                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">Id</label>
                        <div class="col-sm-8">
                            <input class="form-control-plaintext" readonly value="@Model.Ensayo.idEns">
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">Fecha</label>
                        <div class="col-sm-8">
                            <input class="form-control-plaintext" readonly value="@Model.Ensayo.Fecha">
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">Hora</label>
                        <div class="col-sm-8">
                            <input class="form-control-plaintext" readonly value="@Model.Ensayo.Hora" />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">Lugar de Ensayo</label>
                        <div class="col-sm-8">
                            <select class="form-control" asp-for="EnsayosDto.IdLugEns" asp-items="@Model.sl_LugaresEnsayo" id="selectLugar">
                                <option value="">Selecciona un lugar</option>
                            </select>
                            <span asp-validation-summary="ModelOnly" class="text-danger"></span>
                            <span asp-validation-for="EnsayosDto.IdLugEns" class="text-danger"></span>
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>

    <button type="submit" class="btn btn-primary me-2" id="btnActualizar" disabled>Actualizar</button>
    <a class="btn btn-outline-primary" asp-page="/Ensayos/Index" role="button">Atras</a>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const btnActualizar = document.getElementById('btnActualizar');
            const selectLugar = document.getElementById('selectLugar');


            function verificarCampos() {

                if (selectLugar.value) {
                    btnActualizar.removeAttribute('disabled');
                } else {
                    btnActualizar.setAttribute('disabled', 'disabled');
                }
            }
            selectLugar.addEventListener('change', verificarCampos);

            verificarCampos();
        });
    </script>
</form>